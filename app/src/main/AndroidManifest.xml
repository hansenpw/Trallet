<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.microlabs.trallet">

    <application
        android:name=".base.BaseApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddExpensesActivity"
            android:label="@string/title_activity_add_expense"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddNewBookActivity"
            android:label="@string/title_activity_add_new_book"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ExpenseActivity"
            android:label="@string/title_activity_expense"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CurrencyActivity"
            android:label="@string/title_activity_currency"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddNewCurrencyActivity"
            android:label="@string/title_activity_add_new_currency"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EditBookActivity"
            android:label="@string/title_activity_edit_book"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>