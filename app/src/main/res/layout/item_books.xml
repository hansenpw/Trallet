<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvBooks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin_half">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btnEditCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="@dimen/activity_horizontal_margin_half"
                    android:alpha="0.35"
                    android:contentDescription="Edit Button"
                    android:src="@drawable/ic_edit_black_24dp" />

                <RelativeLayout
                    style="?android:attr/buttonBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblPrice">

                    <Button
                        android:id="@+id/btnDetails"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:text="DETAILS" />


                    <Button
                        android:id="@+id/btnDelete"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_toEndOf="@id/btnDetails"
                        android:text="DELETE"
                        android:textColor="#c62828" />

                    <Button
                        android:id="@+id/btnAddExpense"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin_half"
                        android:text="Add Expense" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/lblDescription"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblTitle"
                    android:layout_alignEnd="@id/lblTitle"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:paddingStart="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_horizontal_margin"
                    android:paddingEnd="@dimen/activity_vertical_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:text="@{book.desc}"
                    tools:text="Description" />

                <TextView
                    android:id="@+id/lblPrice"
                    style="@style/TextAppearance.AppCompat.Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblDescription"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:paddingEnd="@dimen/activity_horizontal_margin_triple"
                    android:text="Price"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/lblTitle"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/btnEditCard"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_toStartOf="@id/btnEditCard"
                    android:paddingStart="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_horizontal_margin"
                    android:paddingEnd="@dimen/activity_vertical_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:text="@{book.title}"
                    android:textSize="24sp"
                    tools:text="Title" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <data>

        <variable
            name="book"
            type="com.microlabs.trallet.model.Book" />

        <!--<variable-->
        <!--name="itemListener"-->
        <!--type="com.microlabs.trallet.MainActivity.BookItemListener" />-->

    </data>

</layout>